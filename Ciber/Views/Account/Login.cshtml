@{
    ViewData["Title"] = "Login";
}

<div style="margin-top: 10px"
    <div class="row">
        <form asp-controller="Account" asp-action="Login" method="post" class="form">
            <input type="hidden" name="requestpath" id="requestpath" value="@ViewBag.RequestPath" />
            <div class="form-group">
                <input class="form-control" type="text" name="username" id="username"  placeholder="root"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" id="password" placeholder="admin" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>